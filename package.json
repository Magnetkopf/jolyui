{
  "name": "jolyui.dev",
  "packageManager": "pnpm@10.22.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "rimraf --glob **/node_modules **/dist **/.source **/.turbo **/.next **/pnpm-lock.yaml **/.tsbuildinfo",
    "build": "turbo run build",
    "build:docs": "turbo run build --filter=docs",
    "build:registry": "turbo run build:registry --filter=docs",
    "cleanup:registry": "pnpm --filter=docs cleanup:registry",
    "build:packages": "turbo run build --filter='./packages/*'",
    "dev": "NODE_OPTIONS='--max-old-space-size=8192' turbo run dev",
    "docs:dev": "NODE_OPTIONS='--max-old-space-size=8192' turbo run dev --filter=docs",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "typecheck": "turbo typecheck",
    "check": "turbo lint typecheck",
    "test": "turbo run test",
    "release": "changeset publish",
    "knip": "knip --exclude exports,types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@changesets/cli": "^2.29.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-react": "^5.1.1",
    "expect-type": "^1.2.2",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "knip": "^5.69.1",
    "rimraf": "^6.1.0",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "motion": "^12.23.24"
  }
}
